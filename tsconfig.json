{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
